<div id="data" game-id="<%= @game_id %>" player-id="<%= @player.id %>"></div>
<div id="player-alert-box">Waiting for partner...
</div>
<div class="frame">
  <div id="indicator-box-p1" class="indicator-box">
    <div id="castle-indicator-p1" class="castle-indicator p1-indicator indicator">
      <%= @player.castle %>
    </div>
    <div id="shield-indicator-p1" class="shield-indicator p1-indicator indicator">
      <%= @player.shield %>
    </div>
    <div id="mana-indicator-p1" class="mana-indicator p1-indicator indicator">
      <h1><%= @player.mana %></h1>
      <p id="mana-regen-indicator-p1">
        +<%= @player.mana_regen_rate %>
      </p>
    </div>
    <div id="stamina-indicator-p1" class="stamina-indicator p1-indicator indicator">
      <h1><%= @player.stamina %></h1>
      <p id="stamina-regen-indicator-p1">
        +<%= @player.stamina_regen_rate %>
      </p>
    </div>
    <div id="gold-indicator-p1" class="gold-indicator p1-indicator indicator">
      <h1><%= @player.gold %></h1>
      <p id="gold-regen-indicator-p1">
        +<%= @player.gold_regen_rate %>
      </p>
    </div>
  </div>

  <div id="deck" class="card basic-card-div">
  </div>
  <div id="played-card-container" class="card basic-card-div invisible">
    <div class="card-title basic-card-div">
    </div>
    <div class="card-attribute-indicator card-mana-indicator">
    </div>
    <div class="card-attribute-indicator card-stamina-indicator">
    </div>
    <div class="card-attribute-indicator card-gold-indicator">
    </div>
    <div class="card-image basic-card-div">
      <img class="card-image-image" src=""/>
    </div>
    <div class="card-type-band basic-card-div">
      <p class="card-type-text"></p>
    </div>
    <div class="card-description basic-card-div">
      <p class="card-description-text">
      </p>
    </div>
    <div class="card-bottom-band basic-card-div">

    </div>
  </div>
  <div id="indicator-box-p2" class="indicator-box invisible">
    <div id="castle-indicator-p2" class="castle-indicator p2-indicator indicator">
      <%= @opponent ? @opponent.castle : '' %>
    </div>
    <div id="shield-indicator-p2" class="shield-indicator p2-indicator indicator">
      <%= @opponent ? @opponent.shield : '' %>
    </div>
    <div id="mana-indicator-p2" class="mana-indicator p2-indicator indicator">
      <h1><%= @opponent ? @opponent.mana : '' %></h1>
      <p id="mana-regen-indicator-p2">
        +<%= @opponent ? @opponent.mana_regen_rate : '' %>
      </p>
    </div>
    <div id="stamina-indicator-p2" class="stamina-indicator p2-indicator indicator">
      <h1><%= @opponent ? @opponent.stamina : '' %></h1>
      <p id="stamina-regen-indicator-p2">
        +<%= @opponent ? @opponent.stamina_regen_rate : '' %>
      </p>
    </div>
    <div id="gold-indicator-p2" class="gold-indicator p2-indicator indicator">
